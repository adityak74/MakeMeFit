<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:padding="5dp"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#ffffff"
                app:cardElevation="4dp"
                android:layout_margin="5dp"
                android:id="@+id/card_view"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/st1"
                        android:layout_margin="10dp"

                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="start|top"
                        android:text="All Notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:layout_below="@id/st1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="On | Off"
                        android:id="@+id/allNotificationsToggle"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />




                </RelativeLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#ffffff"
                app:cardElevation="4dp"
                android:layout_margin="5dp"
                android:id="@+id/card_view2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/st2"
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="start|top"
                        android:text="Night Shift Mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_below="@+id/st2"
                        android:id="@+id/st21"
                        android:text="Enable water notifications at night from 11PM to 6AM."
                        android:layout_marginLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Switch
                        android:layout_below="@id/st21"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="On | Off"
                        android:id="@+id/nightModeSwitch"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />




                </RelativeLayout>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                cardView:cardBackgroundColor="#ffffff"
                app:cardElevation="4dp"
                android:layout_margin="5dp"
                android:id="@+id/card_view3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/switchSetFoodTimings"
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="start|top"
                        android:text="Set Food Timings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_below="@+id/switchSetFoodTimings"
                        android:id="@+id/st31"
                        android:text="Choose your own food timings."
                        android:layout_margin="10dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_below="@id/st31"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/breakfastBt"
                            android:layout_weight="1"
                            android:text="Breakfast"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/st31"
                            android:layout_height="match_parent" />

                        <Button
                            android:text="Lunch"
                            android:id="@+id/lunchBt"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/st31"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/dinnerBt"
                            android:text="Dinner"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_below="@id/st31"
                            android:layout_height="match_parent" />




                    </LinearLayout>



                </RelativeLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
