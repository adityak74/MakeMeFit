<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
    android:weightSum="3">

    <EditText android:id="@+id/editTextSubject" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:hint="Enter Subject"/>

    <EditText android:id="@+id/editTextMessage" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="top" android:inputType="textMultiLine" android:lines="5"
        android:layout_weight="2.7"
        android:padding="10dp"
        android:layout_margin="3dp"
        android:hint="Type Message"/>
    <Button android:id="@+id/buttonSend"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="0.1"
        android:text="SEND"
        android:background="#e96656"
        android:textStyle="bold"
        android:visibility="visible"
        android:textSize="25dp"
        android:textColor="#FFFFFF" />
</LinearLayout>